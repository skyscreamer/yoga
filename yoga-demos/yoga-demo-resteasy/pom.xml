            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-spring</artifactId>
            <version>2.3.3.Final</version>
        </dependency>


        <dependency>
            <groupId>org.hibernate</groupId>
